<p id="notice"><%= notice %></p>

<h1>All Posts</h1>
<ul>
    <% @posts.each do |post| %>
    <li class="nav nav-tabs">
      <h2><%= link_to post.title, post %></h2>
      <p>By <%= post.author %> <%= time_ago_in_words post.created_at %> ago, <%=pluralize post.comments.count, 'comment'%> </p>
      <%= post.content %>
      <p>
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info btn-xs'  %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
      </p>
      </li>
    <% end %>
</ul>


<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>
